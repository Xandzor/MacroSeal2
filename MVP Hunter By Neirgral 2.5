automacro mudandocontrol {
	console /no jogo agora/i
	exclusive 1
	run-once 1
	call {
		[
		do conf attackAuto 0
		do conf itemsTakeAuto 0
# Colocar o nome do mapa na frente do LockMap
		do conf lockMap XXXXXXXXXX
		do conf route_randomWalk 0
		do conf sitAuto_hp_lower 0
		do conf sitAuto_hp_upper 0
		do conf sitAuto_sp_lower 0
		do conf sitAuto_sp_upper 0
		do conf teleportAuto_idle 1
		do conf teleportAuto_useSkill 1
		do mconf all 0
# Colocar o nome do MVP no lugar do XXXXX
		do mconf XXXXXX 0 1 0
		do pconfig all 0
		]
	}
}

automacro MvP {
# Colocar o nome do MVP entre /
	monster XXXXXXX
	exclusive 1
	call {
		$map = @arg ("$.lastMonsterPos", 3)
		$locx = @arg ("$.lastMonsterPos", 1)
		$locy = @arg ("$.lastMonsterPos", 2)
# Colocar o nome do char que vai mandar pm entre "		
		do pm "XXXXXX" $map $locx $locy
		do reload macros
	}
}
